<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:ffimageloading="clr-namespace:FFImageLoading.Forms;assembly=FFImageLoading.Forms"
    xmlns:ffTransformations="clr-namespace:FFImageLoading.Transformations;assembly=FFImageLoading.Transformations"
    Title="BookDetail"
    x:Class="Library.BookDetail">
    <ScrollView>
            <StackLayout Margin="16" Spacing="8">
                    <StackLayout HorizontalOptions="CenterAndExpand">
                        <ffimageloading:CachedImage
                            Aspect="AspectFit"
                            ErrorPlaceholder="ic_book"
                            FadeAnimationEnabled="True"
                            HeightRequest="250"
                            HorizontalOptions="Center"
                            Source="{Binding Thumbnail}"
                            VerticalOptions="Center"
                            WidthRequest="250">
                            <ffimageloading:CachedImage.Transformations>
                                            <ffTransformations:CircleTransformation/>
                            </ffimageloading:CachedImage.Transformations>
                        </ffimageloading:CachedImage>
                        <Label
                            FontAttributes="Bold"
                            FontSize="Title"
                            HorizontalOptions="CenterAndExpand"
                            HorizontalTextAlignment="Center"
                            Text="{Binding Title}" />
                        <Label
                            Margin="0,0,0,8"
                            FontSize="Subtitle"
                            HorizontalOptions="CenterAndExpand"
                            HorizontalTextAlignment="Center"
                            Text="{Binding Subtitle}" />
                        <StackLayout BindableLayout.ItemsSource="{Binding SelectedItem.VolumeInfo.Authors}">
                            <BindableLayout.ItemTemplate>
                                <DataTemplate>
                                    <StackLayout>
                                        <Label
                                            FontSize="Subtitle"
                                            HorizontalTextAlignment="Center"
                                            Text="{Binding}" />
                                    </StackLayout>
                                </DataTemplate>
                            </BindableLayout.ItemTemplate>
                            <StackLayout.Triggers>
                                <DataTrigger
                                    Binding="{Binding SelectedItem.VolumeInfo.Authors, TargetNullValue=''}"
                                    TargetType="StackLayout"
                                    Value="">
                                    <Setter Property="IsVisible" Value="false" />
                                </DataTrigger>
                            </StackLayout.Triggers>
                        </StackLayout>
                        <Label
                            Margin="0,0,0,8"
                            FontSize="Subtitle"
                            HorizontalOptions="CenterAndExpand"
                            HorizontalTextAlignment="Center"
                            Text="{Binding PublishDateFormat}" />
                        <Label FontSize="Default" Text="{Binding Description}" />
                        <Button
                            Margin="16,25,16,16"
                            Command="{Binding ReadCommand}"
                            TextColor="Black"
                            WidthRequest="290"
                            BackgroundColor="#cf3"
                            FontAttributes="Bold"
                            FontSize="Medium"
                            HorizontalOptions="Center"
                            Text="Read" />
                    </StackLayout>
            </StackLayout>
        </ScrollView>
</ContentPage>
