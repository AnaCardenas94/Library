<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:ffimageloading="clr-namespace:FFImageLoading.Forms;assembly=FFImageLoading.Forms"
    Title="Books"
    xmlns:ffTransformations="clr-namespace:FFImageLoading.Transformations;assembly=FFImageLoading.Transformations"
    x:Class="Library.Books">
   <StackLayout Margin="0" Spacing="8">
            <CollectionView
                x:Name="ItemList"
                BackgroundColor="Transparent"
                VerticalOptions="FillAndExpand"
                ItemsSource="{Binding Items}"
                RemainingItemsThreshold="{Binding ItemTreshold}"
                RemainingItemsThresholdReachedCommand="{Binding ReachedCommand}"
                VerticalScrollBarVisibility="Always">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <ContentView>
                            <StackLayout
                                Margin="18,8">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <ffimageloading:CachedImage
                                        Grid.RowSpan="3"
                                        Grid.Column="0"
                                        Aspect="AspectFit"
                                        FadeAnimationEnabled="True"
                                        HeightRequest="60"
                                        HorizontalOptions="Center"
                                        Source="{Binding VolumeInfo.ImageLinks.Thumbnail}"
                                        VerticalOptions="Center"
                                        WidthRequest="60" >
                                        <ffimageloading:CachedImage.Transformations>
                                            <ffTransformations:CircleTransformation/>
                                        </ffimageloading:CachedImage.Transformations>
                                     </ffimageloading:CachedImage>
                                    <Label
                                        Grid.Row="0"
                                        Grid.Column="1"
                                        Margin="0,0,0,8"
                                        FontAttributes="Bold"
                                        FontSize="Large"
                                        HorizontalOptions="CenterAndExpand"
                                        HorizontalTextAlignment="Center"
                                        Text="{Binding VolumeInfo.Title}" />
                                    <StackLayout
                                        Grid.Row="1"
                                        Grid.Column="1"
                                        BindableLayout.ItemsSource="{Binding VolumeInfo.Authors}">
                                        <BindableLayout.ItemTemplate>
                                            <DataTemplate>
                                                <StackLayout>
                                                    <Label
                                                        FontAttributes="Italic"
                                                        FontSize="Subtitle"
                                                        HorizontalTextAlignment="Center"
                                                        Text="{Binding}" />
                                                </StackLayout>
                                            </DataTemplate>
                                        </BindableLayout.ItemTemplate>
                                        <StackLayout.Triggers>
                                            <DataTrigger
                                                Binding="{Binding VolumeInfo.Authors, TargetNullValue=''}"
                                                TargetType="StackLayout"
                                                Value="">
                                                <Setter Property="IsVisible" Value="false" />
                                            </DataTrigger>
                                        </StackLayout.Triggers>
                                    </StackLayout>
                                    <Label
                                        Grid.Row="2"
                                        Grid.Column="1"
                                        FontSize="Subtitle"
                                        HorizontalOptions="CenterAndExpand"
                                        HorizontalTextAlignment="Center"
                                        Text="{Binding VolumeInfo.PublishedDate}" />
                                </Grid>
                                <BoxView HeightRequest="1" HorizontalOptions="FillAndExpand" Margin=" 15,0" BackgroundColor="#cf3" />
                                <StackLayout.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding Path=BindingContext.BookDetailCommand, Source={x:Reference ItemList}}" CommandParameter="{Binding}" />
                                </StackLayout.GestureRecognizers>
                            </StackLayout>
                        </ContentView>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
            <ActivityIndicator
                HeightRequest="50"
                Color="#cf3"
                HorizontalOptions="Center"
                IsVisible="{Binding IsBusy}"
                IsRunning="{Binding IsBusy}"
                VerticalOptions="Center"
                WidthRequest="50" />
        </StackLayout>
</ContentPage>
